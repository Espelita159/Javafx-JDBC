<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jdbc_espelita.HelloController">
    <children>
        <VBox fx:id="pnLogin" alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Welcome" textFill="#4cd730">
                    <font>
                        <Font size="34.0" />
                    </font>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox prefHeight="100.0" prefWidth="101.0">
                            <children>
                                <Label prefHeight="31.0" prefWidth="100.0" text="User Name: " textFill="#4cd730">
                                    <font>
                                        <Font size="15.0" />
                                    </font></Label>
                                <Separator opacity="0.0" prefHeight="20.0" prefWidth="100.0" />
                                <Label prefHeight="31.0" prefWidth="100.0" text="Password: " textFill="#4cd730">
                                    <font>
                                        <Font size="15.0" />
                                    </font></Label>
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="132.0">
                            <children>
                                <TextField fx:id="txtUser" prefHeight="34.0" prefWidth="131.0" />
                                <Separator opacity="0.0" prefHeight="20.0" prefWidth="100.0" />
                                <PasswordField fx:id="txtPass" prefHeight="34.0" prefWidth="131.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#onLoginClick" style="-fx-background-color: white;" text="Sign in">
                    <font>
                        <Font size="14.0" />
                    </font></Button>
                <Button fx:id="btnRegister" layoutX="130.0" layoutY="240.0" mnemonicParsing="false" onAction="#onRegisterClick" style="-fx-background-color: white;" text="Register">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
